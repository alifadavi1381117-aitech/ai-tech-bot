# پشتیبان از .env واقعی
Copy-Item .env .env.backup -Force

# سانسور کلیدهای حساس داخل .env (نام‌های لازم را اضافه/کم کن)
(Get-Content .env) |
  ForEach-Object {
    $_ `
    -replace '^(BOT_TOKEN)=.*$', '$1=<REDACTED>' `
    -replace '^(GITHUB_TOKEN)=.*$', '$1=<REDACTED>' `
    -replace '^(WEBHOOK_SECRET)=.*$', '$1=<REDACTED>'
  } | Set-Content .env
